/**
 * Prints data in JSON
 * @param unknown $result
 */
function _olcapi_representation ($data) {

  header('Content-type: text/javascript');

  $result = json_encode($data);
  $result = array_key_exists('callback', $_GET)
          ? $_GET['callback'] . '(' . $result . ');'
		      : $result
		      ;
  
  echo $result;

  module_invoke_all('exit');
  exit;

}

